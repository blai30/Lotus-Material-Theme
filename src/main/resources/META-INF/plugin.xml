<idea-plugin>
    <id>com.blai30.lotus</id>
    <name>Lotus Material Theme</name>
    <vendor url="http://www.bhlai.com">blai30</vendor>

    <description><![CDATA[
    <h1>Lotus Theme Plugin</h1>
    <h2>A theme pack with pastel font colors for Material Theme UI for the JetBrains platform.</h2>
    <hr />

    Includes a dark theme and light theme.
    <ul>
        <li>Lotus Dark</li>
        <li>Lotus Light</li>
    </ul>
    <hr />

    <p>Visit the plugin page to view screenshots</p>
    <br />

    <h3>This plugin depends on Material Theme UI and Rainbow Brackets.</h3>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.chrisrm.idea.MaterialThemeUI</depends>
    <depends>izhangzhihao.rainbow.brackets</depends>

    <extensions defaultExtensionNs="com.chrisrm.idea.MaterialThemeUI">
        <bundledTheme name="Lotus Dark" path="/themes/lotusdark"/>
        <bundledTheme name="Lotus Light" path="/themes/lotuslight"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <bundledColorScheme path="/colors/LotusDark" id="Lotus Dark"/>
        <bundledColorScheme path="/colors/LotusLight" id="Lotus Light"/>
    </extensions>
</idea-plugin>